<!DOCTYPE html>
<html lang="en">
    <head> </head>
    <body>
        <div class="main-container">
            <%- include ("./headerIndex") %>
            <div id="login-background">
                <% if(error.length > 0) { %>
                <div class="alert alert-app-level alert-danger" role="alert">
                    <div class="alert-items">
                        <div class="alert-item static">
                            <div class="alert-icon-wrapper">
                                <clr-icon class="alert-icon" shape="exclamation-circle"></clr-icon>
                            </div>
                            <div class="alert-text"><%= error %></div>
                        </div>
                    </div>
                    <button type="button" class="close" aria-label="Close">
                        <clr-icon aria-hidden="true" shape="close"></clr-icon>
                    </button>
                </div>
                <% } %>
                <div class="clr-row">
                    <div class="clr-col-md-0 clr-col-lg-4"></div>
                    <div class="clr-col-md-12 clr-col-lg-4 login-content">
                        <div class="login-box">
                            <div id="login-title">
                                <section class="title">
                                    <h2>
                                        <span id="title-strong">Pesticide Trends</span><br /><span
                                            id="sub-title"
                                            >Database Explorer</span
                                        >
                                    </h2>
                                </section>
                            </div>
                            <form class="login" action="register" method="post">
                                <div class="clr-form-control">
                                    <div class="input-wrapper">
                                        <clr-input-container>
                                            <input
                                                type="text"
                                                name="username"
                                                id="username"
                                                placeholder="BENUTZERNAME"
                                                class="clr-input"
                                            />
                                        </clr-input-container>
                                    </div>
                                    <div class="input-wrapper">
                                        <clr-password-container>
                                            <input
                                                type="password"
                                                name="password"
                                                id="password"
                                                name="password"
                                                autocomplete="on"
                                                placeholder="PASSWORT"
                                                class="clr-input"
                                            />
                                        </clr-password-container>
                                    </div>
                                    <button id="sign-in" type=" submit" class="btn btn-success">
                                        Register
                                    </button>
                                    <div id="login-link">
                                        <a href="./login" class="signup"
                                            >Sie haben bereits einen Account?<br />Loggen sie sich
                                            ein!</a
                                        >
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="clr-col-md-0 clr-col-lg-4"></div>
                </div>
            </div>
        </div>
    </body>
</html>
