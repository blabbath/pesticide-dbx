<!DOCTYPE html>
<html lang="en">
    <head> </head>
    <body>
        <header class="header-6">
            <div class="branding">
                <a href="./" class="nav-link">
                    <span class="title">Pesticide-Trends DBX</span>
                </a>
            </div>
            <div class="header-actions">
                <% if (currentUser) { %>
                <a href="state" class="nav-link nav-text" id="user-link"
                    >User: <%= currentUser.username %></a
                >
                <% } %>
                <div class="dropdown bottom-left">
                    <button class="dropbtn nav-link nav-icon">
                        <clr-icon shape="bars" size="32"></clr-icon>
                    </button>
                    <div class="dropdown-content">
                        <div class="dropdown-link">
                            <a href="./">
                                <div class="dropdown-icon">
                                    <clr-icon shape="home"></clr-icon>
                                </div>
                                Menu</a
                            >
                        </div>
                        <div class="dropdown-link">
                            <a href="downloads">
                                <div class="dropdown-icon">
                                    <clr-icon shape="download"></clr-icon>
                                </div>
                                Downloads</a
                            >
                        </div>
                        <% if(!currentUser){ %>
                        <div class="dropdown-link">
                            <a href="login">
                                <div class="dropdown-icon">
                                    <clr-icon shape="login"></clr-icon>
                                </div>
                                Login</a
                            >
                        </div>
                        <div class="dropdown-link">
                            <a href="register">
                                <div class="dropdown-icon">
                                    <clr-icon shape="pencil"></clr-icon>
                                </div>
                                Register</a
                            >
                        </div>
                        <% } else { %>
                        <div class="dropdown-link">
                            <a href="logout">
                                <div class="dropdown-icon">
                                    <clr-icon shape="logout"></clr-icon>
                                </div>
                                Log Out</a
                            >
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </header>
        <div id="login-background">
            <% if(errors.length > 0) { %>
            <div class="clr-row">
                <div class="clr-col-12">
                    <div
                        class="alert alert-app-level alert-danger"
                        role="alert"
                    >
                        <div class="alert-items">
                            <div class="alert-item static">
                                <div class="alert-icon-wrapper">
                                    <clr-icon
                                        class="alert-icon"
                                        shape="exclamation-circle"
                                    ></clr-icon>
                                </div>
                                <% errors.forEach(error => { %>
                                <div class="alert-text"><%= error %></div>
                                <% }) %>
                            </div>
                        </div>
                        <button type="button" class="close" aria-label="Close">
                            <clr-icon
                                aria-hidden="true"
                                shape="close"
                            ></clr-icon>
                        </button>
                    </div>
                </div>
            </div>
            <% } %>
            <div class="clr-row">
                <div class="clr-col-md-0 clr-col-lg-4"></div>
                <div class="clr-col-md-12 clr-col-lg-4 login-content">
                    <div class="login-box">
                        <div id="login-title">
                            <section class="title">
                                <h2>
                                    <span id="title-strong"
                                        >Pesticide Trends</span
                                    ><br /><span id="sub-title"
                                        >Database Explorer</span
                                    >
                                </h2>
                            </section>
                        </div>
                        <form class="login" action="login" method="post">
                            <div class="clr-form-control">
                                <div class="input-wrapper">
                                    <clr-input-container>
                                        <input
                                            type="text"
                                            name="username"
                                            id="username"
                                            placeholder="BENUTZERNAME"
                                            class="clr-input"
                                        />
                                    </clr-input-container>
                                </div>
                                <div class="input-wrapper">
                                    <clr-password-container>
                                        <input
                                            type="password"
                                            name="password"
                                            id="password"
                                            name="password"
                                            autocomplete="on"
                                            placeholder="PASSWORT"
                                            class="clr-input"
                                        />
                                    </clr-password-container>
                                </div>
                                <button
                                    id="sign-in"
                                    type=" submit"
                                    class="btn btn-success"
                                >
                                    Sign in
                                </button>
                                <div id="register-link">
                                    <a href="./register" class="signup"
                                        >Sie haben noch keinen Account?<br />Jetzt
                                        Account erstellen!</a
                                    >
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="clr-col-md-0 clr-col-lg-4"></div>
            </div>
        </div>
    </body>
</html>
